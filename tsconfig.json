{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",

    /* ðŸ”§ Make TS forgiving */
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,

    /* Interop + runtime */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Node environment */
    "types": ["node"],

    /* Cleaner builds */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
